<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/completeView_Title"
        android:text="@string/creator_habit_title"
        android:textSize="25dp"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/completeView_habitTitle"
        android:text="to do"
        android:textSize="25dp"

        android:layout_marginLeft="10dp"
        android:layout_below="@id/completeView_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/completeView_completionDate"
        android:text="@string/completion_date"
        android:textSize="20dp"

        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/completeView_habitTitle"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/completeView_date"
        android:text="to do"
        android:textSize="20dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/completeView_completionDate"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/completeView_repeatDaysTitle"
        android:text="@string/repeat_days"
        android:textSize="20dp"

        android:layout_below="@id/completeView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/completeView_repeatDays"
        android:text="TODO: Sat, Mon, Tue, Wed, Thu, Fri, Sat"
        android:textSize="18dp"

        android:layout_below="@id/completeView_repeatDaysTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/completeView_dailyCompletionsTitle"
        android:text="@string/daily_completions"
        android:textSize="20dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/completeView_repeatDays"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/singleView_dailyCompletions"
        android:text="to do"
        android:textSize="20dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/completeView_repeatDays"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/completeView_dailyCompletionsTitle"/>

    <TextView
        android:id="@+id/completeView_totalCompletionsTitle"
        android:text="@string/total_completions"
        android:textSize="20dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/completeView_dailyCompletionsTitle"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/singleView_totalCompletions"
        android:text="to do"
        android:textSize="20dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/completeView_dailyCompletionsTitle"
        android:layout_toRightOf="@+id/completeView_totalCompletionsTitle"/>

    <ImageButton
        android:id="@+id/btn_deleteComplete"
        android:src="@drawable/btn_trash"
        android:background="@android:color/transparent"

        android:scaleType="fitCenter"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:onClick="onBtnClickDelete" />

</RelativeLayout>